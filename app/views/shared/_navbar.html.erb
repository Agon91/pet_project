<div class="navbar navbar-expand-lg navbar-light fixed-top">
    <%#= link_to root_path, class: "navbar-brand" do %>
    <p>Pet Project</p>
    <% #end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-core" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar-core">
      <ul class="navbar-nav ml-lg-auto">

        <li class="nav-item">
        <%= link_to "Organizations", organizations_path, class: "nav-link" %>
        </li>

      <% #if user_signed_in? %>
        <li id="nav-btn-box" class="nav-item">
        <%#= link_to "About Us", about_path, class: "nav-btn" %>
        </li>
        <br>
        <li class="nav-item dropdown">
              <% #if current_user.photo.attached? %>
                <%#= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% #else %>
                <%#= image_tag "", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <%# end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%#= link_to " #{current_user.first_name.capitalize }'s Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Add an Organization", new_organization_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
        </li>
      <% #else %>
        <li class="nav-item login">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li id="nav-btn-box" class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </li>
      <%# end %>
      </ul>
    </div>
</div>
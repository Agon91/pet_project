<div style="padding: 15px; margin-bottom: 10px; border: 1px solid rgb(180, 180, 180); box-shadow: 0 0 2px rgb(180, 180, 180)">
  <div style="display: flex; margin-bottom: 12px">
    <img src="<%= cl_image_path item.organization.avatar.key, height: 1000, width: 1000, crop: :fill %>" alt="organization avatar" class="avatar-square">

    <div style="margin-left: 10px">
      <h6 style="font-size: 18px; margin: 0"><%= item.organization.name %></h6>
      <p style="color: rgb(100, 100, 100); font-size: 14px; margin: 0"><%= time_ago_in_words(item.created_at) %></p>
    </div>
  </div>

  <% if item.is_a? Post %>
    <div style="margin-left: 5px">
      <h5 style="font-size: 18px; margin-bottom: 8px"><%= item.title %></h5>
      <p style="font-size: 14px; margin: 0px"><%= item.description %></p>
    </div>

    <!-- Carroussel of Post images -->
    <% if item.images.exists? %>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% item.images.size.times do |i| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i.zero? %>"></li>
          <% end %>
        </ol>

        <div class="carousel-inner">
          <% item.images.each_with_index do |image, index| %>
            <div class="carousel-item <%= "active" if index.zero? %>">
              <img class="d-block w-100" src="<%= cl_image_path image.key %>" alt="<%= index.ordinalize %> post image">
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <% end %>

  <% elsif item.is_a? Event %>
    <div style="display: flex; justify-content: space-between">
      <div style="margin-left: 5px">
        <h5 style="font-size: 18px; margin-bottom: 8px"><%= item.title %></h5>
        <p style="font-size: 14px; margin: 0px"><%= item.description %></p>
      </div>

      <div>
        <p style="font-size: 14px; margin: 0px"><%= item.part_count %> individuals</p>
        <p style="font-size: 12px; margin: 0px"><%= item.date.strftime("%d %b, %Y (%l%p)") %></p>
        <p style="font-size: 12px; margin: 0px"><%= item.location %></p>
      </div>
    </div>
  <% end %>
</div>
